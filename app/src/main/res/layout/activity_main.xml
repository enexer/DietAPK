        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="ser"-->
        <!--android:onClick="onCheckboxClicked"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true" />-->

    <TextView
        android:id="@+id/textViewSeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_toRightOf="@+id/editTextWeight"
        android:layout_toEndOf="@+id/editTextWeight" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="12dp"
        android:text="Oblicz" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:text="fdgdfgdsfgd"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextAge"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Wzrost" />

    <EditText
        android:id="@+id/editTextWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Waga"
        android:layout_below="@+id/editTextHeight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewSeek"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Aktywność 1.0-2.0"
        android:layout_below="@+id/editTextWeight" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cel Diety"
        android:layout_below="@+id/seekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/buttonHelpActivity"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/editTextWeight"
        android:layout_alignRight="@+id/editTextWeight"
        android:layout_below="@+id/editTextWeight"
        android:layout_marginEnd="63dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="63dp"
        android:layout_marginStart="11dp"
        android:layout_toRightOf="@+id/textView4"
        android:background="@drawable/help" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dip"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/textViewSListK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/red_500"
        android:maxWidth="40dp"
        android:minWidth="35dp"
        android:text="100.0"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textViewSListP"
        android:layout_toStartOf="@+id/textViewSListP"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp" />

    <TextView
        android:id="@+id/textViewSListName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:text="wwwwwwwwwwwww"
        android:textAlignment="textStart"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textViewSListWeight"
        android:layout_toLeftOf="@+id/textViewSListWeight" />

    <TextView
        android:id="@+id/textViewSListF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/blue_500"
        android:maxWidth="40dp"
        android:minWidth="35dp"
        android:text="100.0" />

    <TextView
        android:id="@+id/textViewSListP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/orange_500"
        android:maxWidth="40dp"
        android:minWidth="35dp"
        android:paddingRight="5dp"
        android:text="1000"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textViewSListF"
        android:layout_toStartOf="@+id/textViewSListF" />

    <TextView
        android:id="@+id/textViewSListWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:maxWidth="40dp"
        android:minWidth="35dp"
        android:paddingRight="5dp"
        android:text="1000"
        android:textColor="@color/cyan_50"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textViewSListK"
        android:layout_toStartOf="@+id/textViewSListK" />

    <TextView
        android:id="@+id/textViewSListC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/yellow_500"
        android:maxWidth="40dp"
        android:minWidth="35dp"
        android:paddingRight="5dp"
        android:text="1000"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textViewSListP"
        android:layout_toStartOf="@+id/textViewSListP" />

</RelativeLayout>
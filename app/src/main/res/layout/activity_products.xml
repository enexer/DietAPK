<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.as.dieta.ProductsActivity">

    <ListView
        android:id="@+id/listView"
        android:layout_width="370dp"
        android:layout_height="468dp"
        android:layout_gravity="center"
        tools:layout_editor_absoluteY="35dp"
        tools:layout_editor_absoluteX="6dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="365dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/listView"
        android:layout_below="@+id/editTextFindProduct"
        android:layout_marginLeft="211dp"
        android:layout_marginStart="211dp"
        android:text=" KCAL  |  W  |  B  |  T      "
        android:textAlignment="textEnd"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/textView123"
        android:layout_width="365dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextFindProduct"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:layout_toLeftOf="@+id/buttonFindProduct"
        android:layout_toStartOf="@+id/buttonFindProduct"
        android:text="  NAZWA"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="2dp" />

    <EditText
        android:id="@+id/editTextFindProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignBottom="@+id/buttonFindProduct"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonFindProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:layout_toEndOf="@+id/editTextFindProduct"
        android:layout_toRightOf="@+id/editTextFindProduct"
        android:text="Szukaj" />

</android.widget.RelativeLayout>
